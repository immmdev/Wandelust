<% layout('/layouts/boilerplate') -%>
    <h1 class="col-6 offset-4 mb-3">SignUp Wanderlust</h1>
    <div class="row">
        <div class="col-6 offset-3">
            <form novalidate class="needs-validation"   action="/signup" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input 
                    id="username"
                    name="username" 
                    type="text" 
                    class="form-control" 
                    required />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">E-mail</label>
                    <input 
                    id="email"
                    name="email" 
                    type="text" 
                    class="form-control" 
                    required />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input 
                    id="password"
                    name="password" 
                    type="password" 
                    class="form-control" 
                    required />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                
                <div class="mb-3">
                    <button type="submit" class=" btn btn-success">Add</button>
                </div>
            </form>
        </div>
    </div>
    
