<% layout('/layouts/boilerplate') -%>
<!-- importing ejs layout in edit route -->
<body>
    <div class="row">
        <div class="col-8 offset-2">
        <h1> Edit your Listing</h1>
            <form action="/listing/<%= listing._id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" type="text" value="<%= listing.title %>" class="form-control" required>
                    <div class="invalid-feedback">
                        Title of the site
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea  required class="form-control" name="listing[description]"><%= listing.description %></textarea>
                    <div class="invalid-feedback">
                        Small description of the site
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Original Image</label><br>
                    <img class="edit-image" src="<%=originalImageUrl%>">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input name="listing[image]" type="file" class="form-control" value="<%=listing.image.url%>">
                    <div class="invalid-feedback">
                        
                    </div>

                </div>
                <div class="row">
                    <div class="mb-3 col-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" type="number" value="<%=listing.price %>" class="form-control" required>
                        <div class="invalid-feedback">
                         Enter valid price
                        </div>
                    </div>
                    <div class="mb-3 col-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" type="text" value="<%= listing.country %>" class="form-control" required>
                        <div class="invalid-feedback">
                            Enter valid country name
                        </div>
                    </div>
                </div>
                <div class="mb-3 ">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" type="text" value="<%= listing.location %>" class="form-control" required> 
                    <div class="invalid-feedback">
                        Enter valid location
                    </div>
                </div>
                
                <div class="mb-3">
                    <button class="btn btn-dark add-btn">Edit</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>