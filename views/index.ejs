<% layout('/layouts/boilerplate') -%>

<div id="filters">
    <div class="filter">
        <a href="http://localhost:8080/listing/trending">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </a>
        
    </div>
    <div class="filter">
        <a href="http://localhost:8080/listing/rooms">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </a>
        
    </div>
    <div class="filter">
        <a href="http://localhost:8080/listing/iconic">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic cities</p>
        </a>
        
    </div>
    <div class="filter">
        <a href="http://localhost:8080/listing/mountains">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
        </a>
        
    </div>
    <div class="filter">
        <a href="http://localhost:8080/listing/farms"><div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p></a>
        
    </div>
    <div class="filter">
        <a href="http://localhost:8080/listing/castle"><div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castle</p></a>
        
    </div>
    <div class="filter">
        <a href="http://localhost:8080/listing/arctic"><div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p></a>
        
    </div>
    <div class="filter">
        <a href="http://localhost:8080/listing/domes">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
        </a>
        
    </div>
    <div class="filter">
        <a href="http://localhost:8080/listing/boathouse"><div><i class="fa-solid fa-sailboat"></i></div>
            <p>Boat House</p></a>
        
    </div>

    <div class="tax-toggle">
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display pricing with taxes</label>
        </div>
    </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
    <% for(listing of allListing) { %>
        <div class="card listing-card">
            <a href="/listing/<%= listing._id %>" class="list-link">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="site-img"/>
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b><br>
                        &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "Price not available" %>/Night
                        <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
                    </p>
                </div>
            </a>
        </div>
    <% } %>
</div>
